<div class="flex justify-between items-end">
  <%= vt_title { "My app" } %>
  <div>
    <%= vt_link_to(:primary, "#") { "New user" } %>
    <%= vt_link_to(:secondary, "#") do %>
      <span>Settings</span>
    <% end %>
  </div>
</div>

<div class="flex space-x-8">
  <%= vt_card(title: "Registrations", icon: "user") do %>
    <p class="text-3xl font-bold font-mono">402</p>
  <% end %>
  <%= vt_card(title: "Revenue", icon: "circle-euro") do %>
    <p class="text-3xl font-bold font-mono">12&nbsp;345&nbsp;<span class="text-gray-600 text-xl">â‚¬</span></p>
  <% end %>
</div>

<%= vt_title(level: 2) { "User" } %>
<%= vt_card do %>
  <%= vt_table(id: "users", data: { controller: "table" }) do |table| %>
    <%= table.with_header.with_content("#") %>
    <%= table.with_header.with_content("Name") %>
    <%= table.with_header(class: "!text-right").with_content("Email") %>
    <% @users.each do |user| %>
      <% table.with_row(td: { data: { table_target: "division" } }) do |row| %>
        <%= row.with_division.with_content(user.id) %>
        <%= row.with_division.with_content(user.name) %>
        <%= row.with_division(class: "text-right").with_content(user.email) %>
      <% end %>
    <% end %>
  <% end %>
<% end %>
